<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="infs3605.LoginController">
   <children>
      <ImageView fx:id="logoimage" fitHeight="162.0" fitWidth="262.0" layoutX="197.0" layoutY="31.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../resources/LecticLogo.png" />
         </image>
      </ImageView>
      <AnchorPane layoutX="126.0" layoutY="200.0" prefHeight="176.0" prefWidth="363.0">
         <children>
            <TextField fx:id="username" alignment="CENTER" layoutX="106.0" layoutY="30.0" prefHeight="27.0" prefWidth="152.0" promptText="Username" styleClass="textbox" stylesheets="@StyleSheet.css" />
            <PasswordField fx:id="password" alignment="CENTER" layoutX="106.0" layoutY="74.0" prefHeight="27.0" prefWidth="152.0" promptText="Password" styleClass="textbox" stylesheets="@StyleSheet.css" />
            <Label fx:id="incorrectMessage" layoutX="81.0" layoutY="6.0" prefHeight="17.0" prefWidth="203.0" text="Incorrect username or password" textFill="#cf0606" />
            <Button fx:id="loginButton" layoutX="106.0" layoutY="122.0" mnemonicParsing="false" onAction="#handleloginButton" prefHeight="27.0" prefWidth="64.0" stylesheets="@StyleSheet.css" text="Login" textFill="#414446" />
            <Button fx:id="signupButton" layoutX="191.0" layoutY="122.0" mnemonicParsing="false" onAction="#handlesignupButton" stylesheets="@StyleSheet.css" text="Sign Up" textFill="#414446" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
